#!/usr/bin/env php
<?php
/**
 * @file
 * Drupal CI's console.
 */

use DrupalCI\Providers\ConsoleCommandProvider;
use DrupalCI\Providers\DockerServiceProvider;
use DrupalCI\Providers\DrupalCIServiceProvider;
use Pimple\Container;

// Configure php
require_once  __DIR__ . '/app/bootstrap.php';

// Autoload vendor classes
$loader = require_once __DIR__ . '/vendor/autoload.php';

$container = new Container();
$container->register(new DrupalCIServiceProvider());
$container->register(new ConsoleCommandProvider());
$container->register(new DockerServiceProvider());
$container['console']->run();
